---
// @ts-nocheck
import { scrapeComic } from "../scripts/scraper";

import Layout from "../layouts/Layout.astro";
import ComicCard from "../components/ComicCard.astro";

// Objeto URLSearchParams
const params = Astro.url.searchParams;
// Obtener los valores
const comicURL = params.get("comicURL");
const readDate = params.get("readDate");

const comic = await scrapeComic(comicURL, readDate);

console.log(comic);
// console.log(writersArray);
---

<Layout title={comic.title} referrer="same-origin">
  <ComicCard comic={comic} />
</Layout>
